@using whatsApp_chat.Data.models
@model IEnumerable<Message>
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
    var name = Context.Request.Cookies["name"];
    var username = Context.Request.Cookies["username"];
}

<!doctype html>
